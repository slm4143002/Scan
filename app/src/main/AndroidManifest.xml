<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tag.scan">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <application
        android:name="com.tag.scan.application.ScanApplication"
        android:allowBackup="true"
        android:icon="@mipmap/dianzixiaopiao"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.tag.scan.activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tag.scan.activity.PrepareActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="com.tag.scan.activity.AssembleActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="com.tag.scan.activity.GroundConnectionActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="com.tag.scan.activity.WithstandVoltageActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="com.tag.scan.activity.UTActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="com.tag.scan.activity.CardClearingActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="com.tag.scan.activity.BatchCompletionFinishActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="com.tag.scan.activity.NetActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="com.tag.scan.MainActivity">
        </activity>
    </application>

</manifest>